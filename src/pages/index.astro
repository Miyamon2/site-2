---
import Layout from "../components/layout.astro";
import Sizutane from "../components/sizutane.astro";
import TopGameList from "../components/TopGameList.astro";
import TopAnimeList from "../components/TopAnimeList.astro";
import TopArtistList from "../components/TopMusicList.astro";
import TopGadgetList from "../components/TopGadgetList.astro";
import Header from "../components/Header.astro";
import InstagramTimeline from "../components/InstagramTimeline.astro";
---

<Layout>
    <main>
        <!-- 背景画像を動画の前に表示 -->
        <img
            src="./miyamonのsite背景画像.png"
            alt="miyamonのサイト背景画像"
            class="background-image"
        />
        <video autoplay loop muted playsinline>
            <source
                src="https://github.com/Miyamon2/site-2/raw/refs/heads/master/public/miyamon%E3%81%AEsite%E8%83%8C%E6%99%AF.mp4"
                type="video/mp4"
            />
        </video>
        <Header currentPage="home" />
        <section>
            <div class="content-wrapper">
                <div class="left-column">
                    <section class="self-introduction">
                        <h2 class="self-introduction-title">自己紹介</h2>
                        <div class="intro-content">
                            <img
                                src="./ミヤモンチャップリン.png"
                                alt="miyamonチャップリンが帽子を被り杖を持っている似顔絵のアイコン"
                                class="left-image"
                                onmouseover="this.src='./download.gif'"
                                onmouseout="this.src='./ミヤモンチャップリン.png'"
                            />
                            <div class="intro-text">
                                <p class="self-introduction-text">
                                    <b>私はmiyamonです</b>
                                </p>
                                <p>
                                    こんにちは！チーム逸般人のMiyamonと申します。マイクラが得意で教育福祉分野にとても興味があります。またガジェットが好きでプログラミングや動画編集にも興味があります。今は子供たちにマイクラを教えたり、自分のサイトを作ったりしています。
                                </p>
                            </div>
                        </div>
                    </section>

                    <section class="past-articles">
                        <h2>過去の記事</h2>
                        <Sizutane />
                    </section>

                   
                </div>

                <div class="right-column">
                    <section class="interests">
                        <h2>興味・関心事</h2>
                        <ul>
                            <section class="class-music">
                                <h2>top artist</h2>
                                <TopArtistList />
                            </section>
                            <section class="class-game">
                                <h2>top games</h2>
                                <TopGameList />
                            </section>
                            <section class="class-anime">
                                <h2>top anime</h2>
                                <TopAnimeList />
                            </section>
                            <section class="class-gadget">
                                <h2>top gadget</h2>
                                <TopGadgetList />
                            </section>
                        </ul>
                    </section>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    /* アニメーション定義 */
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* CSS変数の定義 */
    :root {
        --primary-color: #4a90e2;
        --text-color: #ffffff;
        --bg-overlay: rgba(18, 18, 18, 0.8);
        --transition-speed: 0.3s;
        --border-radius: 20px;
        --box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        --border: 1px solid rgba(255, 255, 255, 0.1);
    }

    /* 背景とメイン要素 */
    .background-image {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -2;
    }

    main {
        margin-inline: 2rem;
        overflow: hidden;
        color: var(--text-color);
        position: relative;
        min-height: 100vh;
    }

    main video {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
    }

    main::after {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.7));
        z-index: -1;
    }

    /* リンクスタイル */
    a {
        color: #64b5f6;
        text-decoration: none;
        transition: color var(--transition-speed) ease;
    }

    a:hover {
        color: #ffffffb7;
    }

    main a {
        color: var(--text-color);
    }

    main a:hover {
        color: var(--primary-color);
    }

    /* レイアウト */
    .content-wrapper {
        display: flex;
        flex-wrap: wrap;
        max-width: 1500px;
        margin: 0 auto;
        animation: fadeIn 0.8s ease-out forwards;
        opacity: 0;
    }

    .left-column {
        flex: 1;
        min-width: 300px;
        padding-right: 20px;
    }

    .right-column {
        flex: 1;
        min-width: 300px;
        display: flex;
        flex-direction: column;
    }

    /* 共通セクションスタイル */
    .self-introduction,
    .past-articles,
    .instagram-section,
    .interests {
        background-color: var(--bg-overlay);
        backdrop-filter: blur(10px);
        border-radius: var(--border-radius);
        padding: 2rem;
        margin-top: 1.5rem;
        box-shadow: var(--box-shadow);
        border: var(--border);
        transition: transform var(--transition-speed) ease;
        animation: fadeIn 0.8s ease-out forwards;
        opacity: 0;
    }

    .self-introduction {
        animation-delay: 0.3s;
        margin-bottom: 1.5rem;
        margin-top: 0;
    }

    .past-articles {
        animation-delay: 0.6s;
    }

    .interests {
        animation-delay: 0.9s;
        flex-grow: 1;
    }

    .self-introduction:hover,
    .past-articles:hover,
    .instagram-section:hover,
    .interests:hover {
        transform: translateY(-5px);
    }

    /* 自己紹介セクション */
    .self-introduction-title {
        font-size: x-large;
    }

    .intro-content {
        display: flex;
        gap: 2rem;
        align-items: center;
    }

    .intro-text {
        flex: 1;
    }

    .left-image {
        width: 150px;
        height: auto;
        margin-right: 20px;
    }

    .self-introduction-text {
        font-size: 1.8rem;
        font-weight: bold;
        color: var(--primary-color);
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .intro-text p {
        font-size: 1rem;
        line-height: 1.6;
        color: var(--text-color);
        opacity: 0.9;
    }

    /* 興味・関心事セクション */
    .interests h2 {
        margin-bottom: 15px;
    }

    .interests section {
        margin-bottom: 2rem;
        padding: 1.5rem;
        background-color: rgba(255, 255, 255, 0.05);
        border-radius: 15px;
        transition: transform var(--transition-speed) ease,
                    background-color var(--transition-speed) ease;
        animation: fadeIn 0.8s ease-out forwards;
        opacity: 0;
    }

    .interests .class-music {
        animation-delay: 1.2s;
    }

    .interests .class-game {
        animation-delay: 1.5s;
    }

    .interests .class-anime {
        animation-delay: 1.8s;
    }

    .interests .class-gadget {
        animation-delay: 2.1s;
    }

    .interests section:hover {
        transform: translateY(-3px);
        background-color: rgba(255, 255, 255, 0.1);
    }

    .interests section h2 {
        font-size: 1.3rem;
        margin-bottom: 1rem;
        color: var(--primary-color);
        text-transform: capitalize;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .interests section h2::before {
        content: "";
        width: 4px;
        height: 1.3rem;
        background-color: var(--primary-color);
        border-radius: 2px;
    }

    /* 過去の記事セクション */
    .past-articles {
        overflow: hidden;
        width: 100%;
        box-sizing: border-box;
    }

    /* レスポンシブデザイン */
    @media screen and (max-width: 768px) {
        main {
            margin-inline: 0.5rem;
            padding-bottom: 1rem;
        }

        main video {
            height: 100vh;
        }

        .content-wrapper {
            flex-direction: column;
            margin: 0;
            padding: 0 0.5rem;
            gap: 0.5rem;
        }

        .left-column,
        .right-column {
            padding-right: 0;
            width: 100%;
            margin: 0;
            min-width: unset;
        }

        .self-introduction,
        .interests,
        .past-articles,
        .instagram-section {
            margin: 0.5rem 0;
            padding: 1rem;
            border-radius: 15px;
        }

        .intro-content {
            flex-direction: column;
            text-align: center;
            gap: 1rem;
        }

        .intro-text {
            width: 100%;
        }

        .left-image {
            width: 120px;
            margin: 0 auto 1rem auto;
            display: block;
        }

        .self-introduction-text {
            font-size: 1.4rem;
            line-height: 1.4;
        }

        .intro-text p {
            font-size: 0.9rem;
            line-height: 1.5;
        }

        .interests section {
            margin-bottom: 1rem;
            padding: 1rem;
        }

        .interests section h2 {
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
        }

        .interests h2,
        .past-articles h2,
        .instagram-section h2 {
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }

        /* タッチデバイス用のホバー効果を無効化 */
        .self-introduction:hover,
        .interests:hover,
        .past-articles:hover,
        .instagram-section:hover,
        .interests section:hover {
            transform: none;
        }

        /* タッチ用のアクティブ状態 */
        .self-introduction:active,
        .interests:active,
        .past-articles:active,
        .instagram-section:active {
            transform: scale(0.98);
        }
    }

    /* 小さなスマホ画面用 */
    @media screen and (max-width: 480px) {
        main {
            margin-inline: 0.25rem;
        }

        .content-wrapper {
            padding: 0 0.25rem;
        }

        .self-introduction,
        .interests,
        .past-articles,
        .instagram-section {
            padding: 0.75rem;
            margin: 0.25rem 0;
        }

        .left-image {
            width: 100px;
        }

        .self-introduction-text {
            font-size: 1.2rem;
        }

        .intro-text p {
            font-size: 0.85rem;
        }

        .interests section {
            padding: 0.75rem;
        }
    }

    /* 横向きスマホ用 */
    @media screen and (max-width: 768px) and (orientation: landscape) {
        main {
            padding-bottom: 0.5rem;
        }

        .self-introduction,
        .interests,
        .past-articles,
        .instagram-section {
            margin: 0.25rem 0;
            padding: 0.75rem;
        }

        .intro-content {
            flex-direction: row;
            text-align: left;
        }

        .left-image {
            width: 80px;
            margin: 0 1rem 0 0;
        }
    }
</style>
