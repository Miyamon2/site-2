        z-index: -1;
    }

    .container {
        max-width: 1000px;
        margin: 2rem auto;
        padding: 2rem;
        background: linear-gradient(135deg, rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.7));
        backdrop-filter: blur(12px);
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    ul::before {
        content: '';
